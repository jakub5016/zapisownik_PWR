# #:kivy 2.2.1

<WelcomePage>:
    canvas:
        Color:
            rgba: self.main_color_1

        RoundedRectangle:
            pos: self.center_x/2, self.center_y/2
            size: self.parent.width/2, self.parent.height/2
            radius: [(60, 60), (60, 60), (60, 60), (60, 60)]

    Label:
        font_size: self.width/3
        center_x: self.parent.width / 2
        center_y: (self.parent.height / 2) + (0.1 * self.parent.height)
        text: "Witaj w zapisowniku!"
        font_name: "../fonts/Roboto-Black.ttf"
        color: self.parent.text_color

    LoginButton:
        center_x: self.parent.center_x
        center_y: self.parent.center_y - (0.1 * self.parent.height)


<LoginButton>:
    background_normal: "../graphics/transparent_background.png"
    background_down: "../graphics/transparent_background.png"
    on_press:
        self.press()
        self.parent.parent.manager.transition.duration = 0.7
        self.parent.parent.manager.current = "screen_two"


    canvas:
        Color:
            rgba : self.button_color

        RoundedRectangle:
            radius: [(60, 60), (60, 60), (60, 60), (60, 60)]
            size: self.width, self.height
            pos: self.pos
    Label:
        text:"Zaloguj sie"
        background_color: self.background_color
        center_x: self.parent.center_x
        center_y: self.parent.center_y
        font_name: "../fonts/Roboto-Black.ttf"
        color: self.parent.text_color

<ScreenTwo>:
    canvas:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.width, self.height

    LoginPage:


<ScreenOne>:
    canvas:
        Color:
            rgba: self.background_color
        Rectangle:
            size: self.width, self.height

    WelcomePage:

<LoginPage>:
    canvas:
        Color:
            rgba: self.page_color

        RoundedRectangle:
            pos: self.center_x/2, self.center_y/2 - (0.25 * self.center_y/2)
            size: self.parent.width/2, self.parent.height/1.5
            radius: [(60, 60), (60, 60), (60, 60), (60, 60)]

    Label:
        font_size: self.width/3
        center_x: self.parent.width / 2
        center_y: (self.parent.height / 2) + (0.25 * self.parent.height)
        text: "Zaloguj się!"
        font_name: "../fonts/Roboto-Black.ttf"
        color: self.parent.text_color

    Label:
        font_size: self.width/4
        center_x: self.parent.width / 2
        center_y: (self.parent.height / 2) + (0.13 * self.parent.height)
        text: "Nazwa użytkownika"
        font_name: "../fonts/Roboto-Black.ttf"
        color: self.parent.text_color

    TextInput:
        multiline:False
        font_size: self.width/14
        center_x: self.parent.width / 2
        center_y: (self.parent.height / 2) + (0.068 * self.parent.height)
        height: self.width/8
        width: 300
        on_text:
            self.parent.username_got = self.text

    Label:
        font_size: self.width/4
        center_x: self.parent.width / 2
        center_y: (self.parent.height / 2) - (0.02 * self.parent.height)
        text: "Hasło"
        font_name: "../fonts/Roboto-Black.ttf"
        color: self.parent.text_color

    TextInput:
        multiline:False
        font_size: self.width/14
        center_x: self.parent.width / 2
        center_y: (self.parent.height / 2) - (0.082 * self.parent.height)
        height: self.width/8
        width: 300
        password: True
        on_text:
            self.parent.password_got = self.text

    Button:
        center_x: self.parent.center_x
        center_y: self.parent.center_y - (0.2 * self.parent.height)
        on_press:
            self.parent.on_press()
